{
  "compilerOptions": {
    "target": "ESnext",
    "module": "ESNext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "moduleResolution": "Bundler",
    "isolatedModules": true,
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "./build",
    "rootDir": ".",
    "baseUrl": ".",
    "composite": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "exactOptionalPropertyTypes": true,
    "removeComments": true,
    "jsx": "react-jsx",
    "types": [
      "@testing-library/jest-dom",
      "jest",
      "node"
    ],
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src",
    "__tests__",
    "package.json"
  ],
  "exclude": [
    "node_modules",
    "build",
    "coverage"
  ]
}
